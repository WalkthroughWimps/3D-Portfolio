    <style>
        :root { color-scheme: light dark; }
        body { margin:0; font: 16px/1.5 system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, Arial, sans-serif; background: #0f1115; color: #e7f6f0; }
        .wrap { max-width: 960px; margin: 0 auto; padding: 32px 16px 56px; }
        header { margin: 12px 0 28px; }
        h1 { margin: 0 0 8px; font-size: clamp(22px, 4vw, 36px); }
        p.lead { margin: 0; opacity: .9; }
        section { background: rgba(255,255,255,.03); border: 1px solid rgba(255,255,255,.12); border-radius: 12px; padding: 16px; margin: 16px 0; }
        .section-title { font-size: 18px; margin: 0 0 12px; }
        .row { display: grid; grid-template-columns: 1fr; gap: 12px; }
        .control { display:flex; align-items:center; justify-content:space-between; gap: 12px; padding: 10px 12px; border-radius: 10px; background: rgba(0,0,0,.25); border: 1px solid rgba(255,255,255,.08); }
        .control label { font-weight: 600; }
        .hint { font-size: 12px; opacity: .8; }
        .radios { display:flex; gap: 12px; }
        .actions { display:flex; flex-wrap: wrap; gap: 10px; margin-top: 20px; }
        button.primary { background: #2aa198; color: #fff; border: 1px solid #6ff; padding: 10px 14px; border-radius: 8px; cursor: pointer; }
        button.secondary { background: rgba(255,255,255,.06); color:#fff; border: 1px solid rgba(255,255,255,.15); padding: 10px 14px; border-radius: 8px; cursor: pointer; }
        /* Accessibility classes (minimal defaults) */
        .a11y-motion-reduced * { animation: none !important; transition: none !important; }
        .a11y-contrast-high { filter: contrast(1.15) saturate(1.1); }
        .a11y-text-large { font-size: 18px; }
        .a11y-focus-always :focus { outline: 3px solid #00d1ff; outline-offset: 3px; }

        /* Jump UI styles */
        .jump-container { display:none; max-width: 980px; margin: 24px auto; background: rgba(255,255,255,.02); border:1px solid rgba(255,255,255,.06); padding:16px; border-radius:12px; }
        .jump-top-tabs { display:flex; gap:12px; margin-bottom:12px; }
        .tab { padding:8px 12px; background: rgba(0,0,0,.25); border-radius:8px; cursor:pointer; border:1px solid rgba(255,255,255,.06); }
        .tab.active { background: rgba(42,161,152,.12); border-color: rgba(42,161,152,.3); }
        .jump-body { display:flex; gap:16px; align-items:flex-start; justify-content:center; }
        .video-area { width:854px; max-width:100%; display:flex; flex-direction:column; align-items:center; }
        .video-wrapper { width:854px; height:480px; max-width:100%; background:#000; display:flex; align-items:center; justify-content:center; position:relative; }
        video#jumpVideo { width:100%; height:100%; background:#000; }
        .controls-row { display:flex; gap:12px; align-items:center; margin-top:8px; }
        .play-btn { padding:8px 12px; border-radius:6px; background:rgba(255,255,255,.06); border:1px solid rgba(255,255,255,.08); cursor:pointer; }
        .side-controls { width:160px; display:flex; flex-direction:column; align-items:center; gap:8px; }
        .slider-vertical { writing-mode: bt-lr; -webkit-appearance: slider-vertical; width:8px; height:160px; }
        .slider-vertical-container { display:flex; flex-direction:column; align-items:center; gap:6px; }
        .arrow-btn { display:block; background:rgba(255,255,255,.04); border:1px solid rgba(255,255,255,.06); padding:6px; border-radius:6px; cursor:pointer; }
        .sync-row { margin-top:12px; display:flex; flex-direction:column; align-items:center; gap:6px; }
        .sync-slider { width:480px; max-width:100%; }
        .video-select { display:flex; gap:8px; margin-left:8px; }
        .hidden { display:none !important; }
        .permission-modal { position:fixed; left:0; right:0; top:0; bottom:0; display:flex; align-items:center; justify-content:center; background:rgba(0,0,0,.6); }
        .permission-box { background:#0f1115; border:1px solid rgba(255,255,255,.08); padding:18px; border-radius:10px; max-width:560px; }
    </style>
    <script src="a11y.js" defer></script>
