                    <input id="a11y_focus_outlines" type="checkbox">
                </div>
            </div>
            <div class="actions">
                <button id="save_a11y" class="primary">Save accessibility</button>
                <button id="reset_a11y" class="secondary" type="button">Reset to defaults</button>
            </div>
        </section>

        <section aria-label="Other settings (coming soon)">
            <div class="hint">Theme, volume (with sample tone), A/V sync, cookie consent, personal info, and page of interest selection will appear here.</div>
        </section>

        <!-- Jump player container -->
        <div id="jumpContainer" class="jump-container" aria-hidden="true">
            <div class="jump-top-tabs" role="tablist">
                <div id="tab-numbers" class="tab active" role="tab" aria-selected="true">Numbers 1-2-3</div>
                <div id="tab-alphabet" class="tab" role="tab" aria-selected="false">Alphabet A-B-C</div>
            </div>
            <div class="jump-body">
                <div class="video-area">
                    <div style="display:flex;align-items:center;justify-content:space-between;width:100%;">
                        <div style="display:flex;align-items:center;gap:8px;">
                            <div class="play-btn" id="playPauseBtn" role="button" tabindex="0">Play</div>
                            <div class="video-select" role="radiogroup" aria-label="Select video">
                                <label><input type="radio" name="videoChoice" value="counts" checked> Counts to 10</label>
                                <label><input type="radio" name="videoChoice" value="alphabet"> Alphabet</label>
                            </div>
                        </div>
                    </div>

                    <div class="video-wrapper" id="videoWrapper">
                        <video id="jumpVideo" preload="metadata" controls crossorigin="anonymous" tabindex="0">
                            <!-- sources set dynamically -->
                        </video>
                    </div>

                    <div class="controls-row">
                        <div class="hint">Playback controls</div>
                        <div class="hint" id="syncDisplay">Sync: 0 ms</div>
                    </div>

                    <div class="sync-row">
                        <button class="arrow-btn" id="syncUp">▲</button>
                        <input id="syncSlider" class="sync-slider" type="range" min="-3000" max="3000" step="50" value="0" aria-label="A/V sync (ms)">
                        <button class="arrow-btn" id="syncDown">▼</button>
                    </div>
                </div>

                <div class="side-controls">
                    <button class="arrow-btn" id="volUp">▲</button>
                    <div class="slider-vertical-container">
                        <input id="volumeSlider" type="range" min="0" max="1" step="0.01" value="0.25" class="slider-vertical" aria-label="Volume">
                    </div>
                    <button class="arrow-btn" id="volDown">▼</button>
                </div>
            </div>
        </div>

    </main>

    <!-- Permission modal -->
    <div id="permissionModal" class="permission-modal hidden" role="dialog" aria-modal="true" aria-labelledby="permTitle">
        <div class="permission-box">
            <h3 id="permTitle">Allow sound?</h3>
            <p>This site would like to play sound for the sample videos. Allow audio playback?</p>
            <div style="display:flex;gap:8px;margin-top:12px;">
                <button id="permAllow" class="primary">Allow</button>
                <button id="permDeny" class="secondary">Deny</button>
            </div>
        </div>
    </div>

    <script>
        // Bind controls to SiteA11y and implement jump UI
        (function(){
            // Helper storage keys
            const AUDIO_ALLOWED_KEY = 'site.audio.allowed';
            const AUDIO_VOLUME_KEY = 'site.audio.volume';
            const AUDIO_SYNC_KEY = 'site.audio.sync';

            // File paths (relative to site root)
            const VIDEOS = {
                counts: 'assets/videos/Sesame Street  James Earl Jones Counts to 10.mp4',
                alphabet: 'assets/videos/Sesame Street James Earl Jones Says The Alphabet.mp4'
            };

            // Elements
            const saveBtn = document.getElementById('save_a11y');
            const resetBtn = document.getElementById('reset_a11y');
            const permModal = document.getElementById('permissionModal');
            const permAllow = document.getElementById('permAllow');
            const permDeny = document.getElementById('permDeny');
            const jumpContainer = document.getElementById('jumpContainer');
            const playPauseBtn = document.getElementById('playPauseBtn');
            const jumpVideo = document.getElementById('jumpVideo');
            const volumeSlider = document.getElementById('volumeSlider');
            const volUp = document.getElementById('volUp');
            const volDown = document.getElementById('volDown');
            const syncSlider = document.getElementById('syncSlider');
            const syncUp = document.getElementById('syncUp');
            const syncDown = document.getElementById('syncDown');
            const syncDisplay = document.getElementById('syncDisplay');
            const tabNumbers = document.getElementById('tab-numbers');
            const tabAlphabet = document.getElementById('tab-alphabet');

            // Audio context for delaying audio
            let audioCtx = null;
            let mediaSource = null;
            let delayNode = null;
            let destinationGain = null;

            // State
            let isPlaying = false;
            let currentVideoKey = 'counts';
            let storedVolume = parseFloat(localStorage.getItem(AUDIO_VOLUME_KEY) || '0.25');
            let storedSync = parseInt(localStorage.getItem(AUDIO_SYNC_KEY) || '0', 10);

            // Initialize UI values
            volumeSlider.value = storedVolume;
            syncSlider.value = storedSync;
            syncDisplay.textContent = `Sync: ${storedSync} ms`;

            function showPermissionIfNeeded(){
                const allowed = localStorage.getItem(AUDIO_ALLOWED_KEY);
                if(allowed === null){
                    permModal.classList.remove('hidden');
                    permModal.style.display = 'flex';
                }
            }

            permAllow.addEventListener('click', ()=>{
                localStorage.setItem(AUDIO_ALLOWED_KEY, 'true');
                permModal.classList.add('hidden');
                permModal.style.display = 'none';
            });
            permDeny.addEventListener('click', ()=>{
                localStorage.setItem(AUDIO_ALLOWED_KEY, 'false');
                permModal.classList.add('hidden');
                permModal.style.display = 'none';
            });

            // Create audio context and routing to apply delay to audio
            function ensureAudioRouting(){
                if(audioCtx) return;
                try{
                    audioCtx = new (window.AudioContext || window.webkitAudioContext)();
                    mediaSource = audioCtx.createMediaElementSource(jumpVideo);
                    delayNode = audioCtx.createDelay(3.0); // max 3s
                    destinationGain = audioCtx.createGain();
                    // route: mediaSource -> delayNode -> destinationGain -> audioCtx.destination
                    mediaSource.connect(delayNode);
                    delayNode.connect(destinationGain);
                    destinationGain.connect(audioCtx.destination);
                }catch(e){
                    // WebAudio not supported or blocked
                    audioCtx = null;
                    mediaSource = null;
                    delayNode = null;
                    destinationGain = null;
                }
            }

            function applySyncValue(ms){
                const allowed = localStorage.getItem(AUDIO_ALLOWED_KEY) === 'true';
                storedSync = parseInt(ms, 10) || 0;
                localStorage.setItem(AUDIO_SYNC_KEY, String(storedSync));
                syncDisplay.textContent = `Sync: ${storedSync} ms`;

                if(!audioCtx) return;
                const audioDelaySec = Math.max(0, storedSync/1000);
                delayNode.delayTime.value = audioDelaySec;
            }

            function applyVolumeValue(v){
                storedVolume = parseFloat(v);
                localStorage.setItem(AUDIO_VOLUME_KEY, String(storedVolume));
                // When using WebAudio, set gain; otherwise set video volume
                if(destinationGain){
                    destinationGain.gain.value = storedVolume;
                    jumpVideo.muted = false;
                }else{
                    jumpVideo.volume = storedVolume;
                }
            }

            function loadVideo(key){
                currentVideoKey = key;
                const src = VIDEOS[key];
                jumpVideo.pause();
                isPlaying = false;
                playPauseBtn.textContent = 'Play';
                // Clear sources
                while(jumpVideo.firstChild) jumpVideo.removeChild(jumpVideo.firstChild);
                const srcEl = document.createElement('source');
                srcEl.src = src;
                // Let browser sniff mime by extension
                jumpVideo.appendChild(srcEl);
                jumpVideo.load();

                // Recreate audio routing to new element
                if(audioCtx){
                    try{ mediaSource.disconnect(); }catch(e){}
                    try{ delayNode.disconnect(); }catch(e){}
                    try{ destinationGain.disconnect(); }catch(e){}
                    try{ mediaSource = audioCtx.createMediaElementSource(jumpVideo); mediaSource.connect(delayNode); }catch(e){}
                }
                applyVolumeValue(storedVolume);
                applySyncValue(storedSync);
            }

            // Play handling with sync (handle negative sync by delaying video start)
            function playWithSync(){
                const sync = storedSync;
                const audioAllowed = localStorage.getItem(AUDIO_ALLOWED_KEY) === 'true';
                ensureAudioRouting();

                // If audio not allowed, keep muted
                if(!audioAllowed){ jumpVideo.muted = true; }

                // If negative sync (audio earlier) delay video start by -sync
                if(sync < 0){
                    // play audio immediately (via audio route) and delay video display/play
                    // We will start audio by playing video but hide video until delayed start.
                    // To cause audio to play earlier, start playback and set video currentTime slightly forward?
                    // Simpler: start playback and immediately pause video, then resume after delay
                    jumpVideo.muted = false; // audio plays via audioCtx
                    jumpVideo.play().then(()=>{
                        // Pause video rendering by freezing currentTime progression with playbackRate=0 then resume
                        jumpVideo.playbackRate = 1; // normal
                        // Create a small trick: set a timeout to seek forward as needed
                        // Pause video visually by setting visibility? Keep simple: pause video and after delay play
                        jumpVideo.pause();
                        setTimeout(()=>{
                            jumpVideo.play();
                        }, Math.abs(sync));
                        isPlaying = true;
                        playPauseBtn.textContent = 'Pause';
                    }).catch(()=>{});
                }else{
                    // Positive sync delays audio via delayNode; just play
                    jumpVideo.play().then(()=>{
                        isPlaying = true;
                        playPauseBtn.textContent = 'Pause';
                    }).catch(()=>{});
                }
            }

            function pausePlayback(){
                jumpVideo.pause();
                isPlaying = false;
                playPauseBtn.textContent = 'Play';
            }

            // Event bindings
            saveBtn.addEventListener('click', ()=>{
                const reducedMotion = document.getElementById('a11y_reduced_motion').checked;
                const highContrast = document.getElementById('a11y_high_contrast').checked;
                const textScale = (document.querySelector('input[name="a11y_text"]:checked')?.value)||'normal';
                const focusOutline = document.getElementById('a11y_focus_outlines').checked ? 'always':'auto';
                try{ window.SiteA11y.set({ reducedMotion, highContrast, textScale, focusOutline }); }catch(e){}

                // After saving accessibility preferences, show the jump UI instead of redirecting
                jumpContainer.style.display = 'block';
                jumpContainer.setAttribute('aria-hidden','false');
                showPermissionIfNeeded();
                // initialize audio routing only on user interaction
                ensureAudioRouting();
                // load default video
                loadVideo(currentVideoKey);
            });

            resetBtn.addEventListener('click', ()=>{
                try { localStorage.removeItem('site.a11y.settings'); } catch {}
                window.SiteA11y.apply(window.SiteA11y.get());
                hydrate();
            });

            // Tab switching
            tabNumbers.addEventListener('click', ()=>{ tabNumbers.classList.add('active'); tabAlphabet.classList.remove('active'); loadVideo('counts'); });
            tabAlphabet.addEventListener('click', ()=>{ tabAlphabet.classList.add('active'); tabNumbers.classList.remove('active'); loadVideo('alphabet'); });

            // Video selection radios (redundant with tabs)
            document.querySelectorAll('input[name="videoChoice"]').forEach(r=>{
                r.addEventListener('change', ()=>{ loadVideo(r.value); });
            });

            playPauseBtn.addEventListener('click', ()=>{
                if(!isPlaying) playWithSync(); else pausePlayback();
            });

            // Keyboard activation for play button
            playPauseBtn.addEventListener('keydown', (e)=>{ if(e.key==='Enter' || e.key===' ') { e.preventDefault(); playPauseBtn.click(); } });

            // Volume arrows
            function changeVolumeBy(delta){
                let v = parseFloat(volumeSlider.value) + delta;
                v = Math.max(0, Math.min(1, v));
                volumeSlider.value = v; applyVolumeValue(v);
            }
            volUp.addEventListener('click', ()=>{ changeVolumeBy(0.05); });
            volDown.addEventListener('click', ()=>{ changeVolumeBy(-0.05); });

            // Sync arrows
            function changeSyncBy(deltaMs){
                let v = parseInt(syncSlider.value,10) + deltaMs;
                v = Math.max(-3000, Math.min(3000, v));
                syncSlider.value = v; applySyncValue(v);
            }
            syncUp.addEventListener('click', ()=>{ changeSyncBy(50); });
            syncDown.addEventListener('click', ()=>{ changeSyncBy(-50); });

            // Sliders input
            volumeSlider.addEventListener('input', (e)=>{ applyVolumeValue(e.target.value); });
            syncSlider.addEventListener('input', (e)=>{ applySyncValue(e.target.value); });

            // Keyboard arrows affect volume and sync when jump container is focused
            jumpContainer.addEventListener('keydown', (e)=>{
                if(e.key === 'ArrowUp'){ e.preventDefault(); changeVolumeBy(0.02); }
                if(e.key === 'ArrowDown'){ e.preventDefault(); changeVolumeBy(-0.02); }
                if(e.key === 'ArrowRight'){ e.preventDefault(); changeSyncBy(50); }
                if(e.key === 'ArrowLeft'){ e.preventDefault(); changeSyncBy(-50); }
            });

            // Also when volume or sync sliders are focused, allow arrow keys default behavior
            volumeSlider.addEventListener('keydown', (e)=>{
                if(e.key === 'ArrowUp'){ e.preventDefault(); changeVolumeBy(0.02); }
                if(e.key === 'ArrowDown'){ e.preventDefault(); changeVolumeBy(-0.02); }
            });
            syncSlider.addEventListener('keydown', (e)=>{
                if(e.key === 'ArrowRight'){ e.preventDefault(); changeSyncBy(50); }
                if(e.key === 'ArrowLeft'){ e.preventDefault(); changeSyncBy(-50); }
            });

            // Update storage and UI when video element ends/plays
            jumpVideo.addEventListener('ended', ()=>{ isPlaying=false; playPauseBtn.textContent='Play'; });

            // Hydrate function from original file
            function hydrate(){
                const s = window.SiteA11y.get();
                document.getElementById('a11y_reduced_motion').checked = !!s.reducedMotion;
                document.getElementById('a11y_high_contrast').checked = !!s.highContrast;
                const val = s.textScale === 'large' ? 'large' : 'normal';
                [...document.querySelectorAll('input[name="a11y_text"]')].forEach(r=>{ r.checked = (r.value===val); });
                document.getElementById('a11y_focus_outlines').checked = (s.focusOutline === 'always');
            }

            document.addEventListener('DOMContentLoaded', ()=>{
                hydrate();
                // On load check permission and show prompt if not set
                showPermissionIfNeeded();
                // Initialize audio values from storage
                applyVolumeValue(storedVolume);
                applySyncValue(storedSync);
            });
        })();
    </script>
</body>
</html>
